<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Car</title>
</head>
<body>
  <h1>Edit Car</h1>
  <form action="/cars/<%= car._id %>?_method=PUT" method="POST">
    <div>
      <label for="model">Model:</label>
      <input type="text" id="model" name="model" value="<%= car.model %>">
    </div>
    <div>
      <label for="price">Price:</label>
      <input type="text" id="price" name="price" value="<%= car.price %>">
    </div>
    <div>
      <label for="description">Description:</label>
      <input type="text" id="description" name="description" value="<%= car.description %>">
    </div>
    <button type="submit">Update Car</button>
  </form>
  <a href="/cars">Back to Car List</a>
</body>
</html>